# Server
PORT=3001
NODE_ENV=development

# Database (PostgreSQL URI format)
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/ngevent
# Alternative format: postgresql://user:password@host:port/database?sslmode=require

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=7d

# Cloudinary (for file uploads)
CLOUDINARY_CLOUD_NAME=your
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Email (Resend)
RESEND_API_KEY=your_resend_api_key
RESEND_FROM_EMAIL=noreply@yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:5173

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:5173

# Google OAuth (Client-side flow)
# Only GOOGLE_CLIENT_ID is required - frontend uses the same client ID
# Get this from Google Cloud Console (OAuth 2.0 Client)
GOOGLE_CLIENT_ID=

# API Basic Authentication (optional extra gate)
#
# NOTE: If you embed these credentials into a public frontend build, they are not secret.
# Use this primarily to protect internal/admin endpoints (or add IP allowlists at the edge).
BASIC_AUTH_ENABLED=false
BASIC_AUTH_USER=change-me
BASIC_AUTH_PASS=change-me
# Use a dedicated header so it doesn't conflict with Authorization: Bearer <jwt>
BASIC_AUTH_HEADER=X-Basic-Auth
# Protect ALL API routes under /api/* (not recommended for public sites)
BASIC_AUTH_PROTECT_ALL_API=false
# Comma-separated path prefixes to protect (recommended: protect only sensitive routes)
# NOTE: Do NOT include /api/events if you want public event listing to remain accessible.
BASIC_AUTH_PROTECT_PATHS=/api/upload,/api/notifications,/api/broadcast,/api/profile,/api/registrations,/api/form-fields,/api/speakers
# Comma-separated path prefixes to bypass the gate (useful for health checks)
BASIC_AUTH_EXEMPT_PATHS=/api/health
